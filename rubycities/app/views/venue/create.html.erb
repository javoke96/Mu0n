<style>
th, td {
  padding: 10px;
}
th {
  text-align: right;
}
</style>

<h1>Create Venue:</h1>

<%= form_tag(nil, method: "post") do %>

<table>
  <tbody>
    <tr>
      <th><%= label_tag(:name, "Name:") %></th>
      <td><%= text_field_tag(:title, nil, :required => true) %></td>
    </tr>
    <tr>
    <th><%= label_tag(:status, "Raves") %></th>
    <td><%= radio_button_tag 'status', 'true', true %></td>
    </tr>
    <tr>
    <th><%= label_tag(:status, "Doesn't Rave") %></th>
    <td><%= radio_button_tag 'status', 'false', false %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= submit_tag("Create") %></td>
    </tr>
  </tbody>
</table>

<% end %>
